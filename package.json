{
    "name": "@nosto/autocomplete",
    "version": "1.1.2",
    "description": "Library designed to simplify the implementation of search autocomplete functionality",
    "keywords": [
        "nosto"
    ],
    "homepage": "https://github.com/Nosto/nosto-autocomplete#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nosto/nosto-autocomplete.git"
    },
    "type": "module",
    "license": "BSD-3-Clause",
    "author": "Nosto",
    "main": "dist/autocomplete.cjs",
    "module": "dist/autocomplete.mjs",
    "source": "src/index.ts",
    "exports": {
        ".": {
            "import": "./dist/autocomplete.mjs",
            "require": "./dist/autocomplete.cjs",
            "types": "./dist/autocomplete.d.ts"
        },
        "./liquid": {
            "import": "./dist/liquid/autocomplete.mjs",
            "require": "./dist/liquid/autocomplete.cjs",
            "types": "./dist/liquid/autocomplete.d.ts"
        },
        "./mustache": {
            "import": "./dist/mustache/autocomplete.mjs",
            "require": "./dist/mustache/autocomplete.cjs",
            "types": "./dist/mustache/autocomplete.d.ts"
        },
        "./react": {
            "import": "./dist/react/autocomplete.mjs",
            "require": "./dist/react/autocomplete.cjs",
            "types": "./dist/react/autocomplete.d.ts"
        },
        "./preact": {
            "import": "./dist/preact/autocomplete.mjs",
            "require": "./dist/preact/autocomplete.cjs",
            "types": "./dist/preact/autocomplete.d.ts"
        },
        "./liquid/template": "./dist/liquid/autocomplete.liquid",
        "./mustache/template": "./dist/mustache/autocomplete.mustache",
        "./styles": "./dist/styles.css",
        "./styles.css": "./dist/styles.css",
        "./dist/styles.css": "./dist/styles.css"
    },
    "types": "dist/autocomplete.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "npm run exportTemplates && npm run typecheck && npm run lint && npm run build:rollup && npm run build:liquid && npm run build:mustache && npm run build:styles",
        "build:rollup": "rollup --config rollup.config.mjs",
        "build:liquid": "cp src/defaults/autocomplete.liquid dist/liquid/autocomplete.liquid",
        "build:mustache": "cp src/defaults/autocomplete.mustache dist/mustache/autocomplete.mustache",
        "build:styles": "cp src/styles.css dist/styles.css",
        "build:docs": "typedoc src/entries/base.ts src/entries/liquid.ts src/entries/mustache.ts src/entries/react.ts",
        "build:site": "npm run build:docs && npm run test:cov && rm -rf site && cp -r ./docs ./site && cp -r ./coverage ./site/coverage",
        "lint": "eslint 'src/**/*.{ts,tsx}' --cache",
        "typecheck": "tsc --noEmit",
        "exportTemplates": "node scripts/exportTemplates.js",
        "prettify": "prettier --write \"{src,spec}/**/*.{ts,tsx}\"",
        "test": "jest spec",
        "test:cov": "jest --coverage spec && make-coverage-badge"
    },
    "prettier": {
        "trailingComma": "es5",
        "semi": false,
        "arrowParens": "avoid",
        "tabWidth": 2
    },
    "release": {
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            "next",
            "next-major",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ]
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.13.0",
        "@nosto/nosto-js": "^1.2.1",
        "@preact/compat": "^18.3.1",
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-commonjs": "^28.0.1",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.5.3",
        "@types/mustache": "4.x",
        "@types/react": "18.x",
        "@types/react-dom": "18.x",
        "eslint": "^9.1.3",
        "eslint-plugin-promise": "^7.1.0",
        "globals": "^15.11.0",
        "jest": "^29.6.2",
        "jest-environment-jsdom": "^29.6.2",
        "liquidjs": "^10.9.4",
        "make-coverage-badge": "^1.2.0",
        "mustache": "^4.2.0",
        "prettier": "^3.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rollup": "^4.28.0",
        "rollup-plugin-dts": "^6.1.1",
        "rollup-plugin-esbuild": "^6.1.1",
        "ts-jest": "^29.1.1",
        "typedoc": "^0.27.4",
        "typescript": "5.4.x",
        "typescript-eslint": "^8.13.0"
    },
    "peerDependencies": {
        "liquidjs": "10.x",
        "mustache": "4.x",
        "react": "18.x",
        "react-dom": "18.x"
    },
    "peerDependenciesMeta": {
        "mustache": {
            "optional": true
        },
        "liquidjs": {
            "optional": true
        },
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        }
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "testEnvironmentOptions": {
            "resources": "usable",
            "runScripts": "dangerously"
        },
        "coverageReporters": [
            "clover",
            "json",
            "json-summary",
            "lcov",
            "text"
        ]
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
