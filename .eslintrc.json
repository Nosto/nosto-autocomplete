{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "promise/prefer-await-to-then": "error",
        "@typescript-eslint/consistent-type-assertions": ["error", { "assertionStyle": "never" }]
    }
}
